{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true,
    "declaration": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "module": "ES2015",
    "target": "ES5",
    "lib": ["esnext", "dom"],
    "jsx": "react",
    "isolatedModules": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "dist"]
}
